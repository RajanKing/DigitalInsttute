<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme"
    tools:context=".LibraryView">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Machine Learning Courses"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="Korbit "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/krobit"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:fontFamily="cursive"
            android:onClick="OpenWebsite"
            android:textStyle="italic"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaggle"
            android:fontFamily="cursive"
            android:id="@+id/kaggle"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Documentation"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="Android doc "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:id="@+id/andDoc"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Java"
            android:id="@+id/javaDoc"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Python"
            android:id="@+id/pyDoc"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="programing"
        android:id="@+id/Programming"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:onClick="OpenWebsite"
        android:fontFamily="cursive"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BooksPdf"
        android:text="Library Books"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:onClick="OpenWebsite"
        android:fontFamily="cursive"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lab"
        android:gravity="center"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:text="C "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:id="@+id/Clab"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Java"
            android:id="@+id/javalab"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Python"
            android:id="@+id/pythonlab"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Algorihm visulizer"
            android:id="@+id/Alogrithmlab"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Programs visulizer"
            android:id="@+id/programVizulizer"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:onClick="OpenWebsite"
            android:fontFamily="cursive" />
    </LinearLayout>
</LinearLayout>