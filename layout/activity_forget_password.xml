<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:background="@mipmap/theme"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="cursive"
        android:text="Forget Password"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="italic|bold" />


    <!---->
           <EditText
        android:id="@+id/ForgetPasswordInstitutemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="@string/id_or_register_mail"
        android:inputType="textEmailAddress"
        android:background="@drawable/text_background"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        />


    <Button
        android:id="@+id/signInInstitution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ForgetPasswordInstitutemail"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:onClick="SendPassword"
        android:layout_marginRight="40dp"
        android:background="@drawable/round_button"
        android:text="Send Password"
        android:textColor="@android:color/white"
        />


</RelativeLayout>