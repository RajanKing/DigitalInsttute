<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/theme"
    tools:context=".RegesterInstituteActivity"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dl_logo"/>
    <TextView
        android:id="@+id/regesterInstutieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:includeFontPadding="true"
        android:text="Sing up!"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="cursive"
        />

    <EditText
        android:id="@+id/institute_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="@string/institute_name"
        android:ems="10"
        android:hint="@string/institute_name"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_background"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/institute_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="@string/institute_email"
        android:ems="10"
        android:hint="@string/institute_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_background"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/Institute_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="@string/institute_contact_number"
        android:ems="10"
        android:hint="@string/institute_contact_number"
        android:inputType="phone"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_background"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/Institute_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="@string/institute_password"
        android:ems="10"
        android:hint="@string/institute_password_6"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_background"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="cursive"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:soundEffectsEnabled="true"
        android:text="Register"
        android:textAlignment="center"
        android:textDirection="firstStrongLtr"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        android:textColor="@android:color/white"
        android:background="@drawable/round_button"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>